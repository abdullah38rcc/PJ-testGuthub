            <Button android:text="Dodaj Dogodek" android:layout_height="wrap_content" android:onClick="onClick" android:layout_width="wrap_content" android:id="@+id/buttonDodajDogodek"></Button>

        </LinearLayout>

        <TextView
            android:id="@+id/textViewIzpisDogodkov"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tukaj bo koledar in opravila" >
</TextView>
    </LinearLayout>
</LinearLayout>
