<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent" android:background="@drawable/ozadje">
    <LinearLayout android:layout_width="match_parent" android:id="@+id/linearLayout1" android:orientation="vertical" android:gravity="center" android:layout_height="match_parent">
        <LinearLayout android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/linearLayout2">
            <Spinner android:layout_height="wrap_content" android:layout_weight="1" android:layout_width="wrap_content" android:id="@+id/spinner1"></Spinner>
            <EditText android:layout_weight="1" android:layout_height="wrap_content" android:layout_width="wrap_content" android:inputType="numberDecimal" android:id="@+id/editTextValuta1"></EditText>
        </LinearLayout>
        <LinearLayout android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/linearLayout3">
            <Spinner android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/spinner2" android:layout_weight="1"></Spinner>
            <EditText android:layout_weight="1" android:layout_height="wrap_content" android:layout_width="wrap_content" android:inputType="numberDecimal" android:id="@+id/editTextValuta2"></EditText>
        </LinearLayout>
        <Button android:id="@+id/buttonPretvoriValute" android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="Pretvori" android:onClick="onClick"></Button>
    </LinearLayout>
    
</LinearLayout>
