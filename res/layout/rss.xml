<?xml version="1.0" encoding="utf-8"?>

	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	    android:orientation="vertical"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:id="@+id/mainLL" android:background="@drawable/ozadje">
	    <LinearLayout android:layout_width="match_parent" android:id="@+id/linearLayout2" android:layout_height="50dip" android:gravity="center">

	        <LinearLayout
	            android:id="@+id/linearLayout1"
	            android:layout_width="wrap_content"
	            android:layout_height="match_parent"
	            android:gravity="center"
	            android:orientation="vertical" >

	            <TextView
	                android:id="@+id/textViewRSS1"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="UM FERI - Novice na oglasni deski"
	                android:textSize="16px"
	                android:textStyle="bold" />

	        </LinearLayout>
	
	        <Button
	            android:id="@+id/buttonOsveziRSS"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center"
	            android:onClick="onClick"
	            android:text="Osvezi" />
	
	    </LinearLayout>

	    <LinearLayout
	        android:id="@+id/linearLayout3"
	        android:layout_width="match_parent"
	        android:layout_height="50px"
	        android:gravity="right"
	        android:orientation="vertical" >

	        <LinearLayout
	            android:id="@+id/LinearLayout01"
	            android:layout_width="250px"
	            android:layout_height="wrap_content"
	            android:gravity="center"
	            android:orientation="vertical" >

	            <TextView
	                android:id="@+id/textViewNazadnjeOsvezeneNovice"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="Medium Text"
	                android:textAppearance="?android:attr/textAppearanceSmall" />
	        </LinearLayout>

	    </LinearLayout>
	
	<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
	    <LinearLayout
	        android:id="@+id/linearLayout1RSS"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:orientation="vertical" >
	    </LinearLayout>
	</ScrollView>
	</LinearLayout>
